.chat-layaut
  .chat
    = render partial: "shered/groups"
    .chat-right
      .chat-header
        .chat-header-name
          = @group.name
        .chat-header-member
          Members:
          - @users.each do |user|
            = user.name
        = link_to edit_group_path(@group), method: :get do
          .chat-header-edit
            Edit
      .chat-body
        - @messages.each do |message|
          .chat-body-name
            = message.user.name
          .chat-body-time
            = message.created_at
          .chat-body-text
            = simple_format(message.body)
      .chat-footer
        = form_for [@group, @message] do |f|
          .chat-footer-body
            = f.text_area :body, placeholder: 'type a text', class: "chat-footer-text"
            %label.chat-footer-image
              = f.file_field :image, class: "file_field"
              %i.fa.fa-image
          = f.submit "Send", class: "chat-footer-button"
