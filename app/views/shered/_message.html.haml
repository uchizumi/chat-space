.chat-body-message{ class: 'messages', data: { id: message.id }}
  .chat-body-message__name
    = message.user.name
  .chat-body-message__time
    = message.created_at.strftime("%Y年%m月%d日 %H:%M:%S")
  .chat-body-message__text
    = simple_format(message.body)
    - unless message.image.blank?
      = image_tag message.image, class: 'chat-image'
